{
    <b>
        <div style="text-align: center;">PROTOTYPE</div>
    </b>
}

<b>
    <a asp-controller=Company
       asp-action=View
       asp-route-id=@Model.Company.Id>
        @Model.Company.Name</a> @Model.Name</b>
<table width=100%>

@if(Model.Introduced.Year != 1000)
{
    <tr>
        <th scope=row
            width="37%">
            <div align=right>
                Introduction date
            </div>
        </th>
        <td width="63%">
