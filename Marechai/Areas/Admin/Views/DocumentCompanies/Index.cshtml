@model IEnumerable<Marechai.Areas.Admin.Models.DocumentCompanyViewModel>

@{
    ViewData["Title"] = "Index";
}
<h1>Document companies</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">
        Create New
    </a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CompanyId" asp-controller="Companies">
                    @Html.DisplayFor(modelItem => item.Company)</a>
            </td>
            <td>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">
                    Details
                </a>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">
                    Edit
                </a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>