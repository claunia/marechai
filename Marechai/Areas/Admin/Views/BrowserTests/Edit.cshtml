                <div class="checkbox">
                    <label>
                        <input asp-for="Agif" /> @Html.DisplayNameFor(model => model.Agif)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Table" /> @Html.DisplayNameFor(model => model.Table)
                    </label>
                </div>
