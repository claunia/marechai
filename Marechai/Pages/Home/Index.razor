@page "/"
@inherits OwningComponentBase<NewsService>
@inject IStringLocalizer<NewsService> L

<h2>@L["News"]</h2>

@if (!_loaded)
{
    <p align="center">@L["Loading..."]</p>

    return;
}

@foreach (var news in _news)
{
    <table border="0" width="100%">
        <tr>
            <td colspan="2">
                <b>@news.Timestamp</b>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                @news.Text
            </td>
        </tr>
        <tr>
            <td>@* TODO: Image *@</td>
            <td>
                <a href="/@news.Controller/@news.AffectedId">
                    @news.ItemName
                </a>
            </td>
        </tr>
    </table>
    <br />
}
